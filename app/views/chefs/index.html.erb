<%= render 'shared/page_title', title: 'all chefs' %>

<div align='center'>
  <%= will_paginate %>
  <% @chefs.each do |chef| %>
    <ul class='listing'>
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class='chef-title'><%= link_to capitalize_words(chef.chefname), chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, 'recipe') if chef.recipes %></small></li>
          <li><%= link_to "Delete this chef", chef, method: :delete, data: { confirm: 'Are you sure you want to delete this chef and all associated redipes?' } %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
