<%= render 'shared/errors', obj: @ingredient %>

<%= form_for(@ingredient, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
  <div class='row'>
    <div class='col-md-12'>
      <div class='form-group'>
        <div class='control-label col-md-2'>
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter ingredient name', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <%= f.submit(@ingredient.new_record? ? 'Add Ingredient' : 'Update Ingredient',
                       class: 'btn btn-primary btn-lg btn-xlarge') %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="col-md-10 col-md-offset-2 colormatch">
  [ <%= link_to "All Ingredients", ingredients_path %> ]
</div>
